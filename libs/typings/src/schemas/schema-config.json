{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "additionalProperties": false,
    "definitions": {
        "ConfigModel": {
            "enum": [
                "metalfog",
                "smoothit",
                "uscleaner"
            ],
            "type": "string"
        },
        "ProductSeries": {
            "description": "Product series available with machines",
            "enum": [
                "any",
                "cr-01",
                "cv-01",
                "llc_ox",
                "llc_rd",
                "mv-01",
                "sv-01",
                "usl_act",
                "usl_ox",
                "usl_rd",
                "water"
            ],
            "type": "string"
        },
        "Profile": {
            "additionalProperties": false,
            "description": "Profile schema from configuration",
            "properties": {
                "id": {
                    "description": "Profile UUID",
                    "pattern": "^[a-f0-9]{8}-[a-f0-9]{4}-[a-f0-9]{4}-[89ab][a-f0-9]{3}-[a-f0-9]{12}$",
                    "type": "string"
                },
                "name": {
                    "description": "Name of the profile",
                    "type": "string"
                },
                "skeleton": {
                    "description": "Name of the referencing skeleton profile",
                    "type": "string"
                },
                "values": {
                    "description": "Values of the profile",
                    "items": {
                        "additionalProperties": false,
                        "properties": {
                            "key": {
                                "type": "string"
                            },
                            "value": {
                                "type": "number"
                            }
                        },
                        "required": [
                            "key",
                            "value"
                        ],
                        "type": "object"
                    },
                    "type": "array"
                }
            },
            "required": [
                "id",
                "name",
                "skeleton",
                "values"
            ],
            "type": "object"
        },
        "Settings": {
            "additionalProperties": false,
            "description": "Machine additional settings",
            "properties": {
                "devMode": {
                    "description": "Dev mode enabled on this machine.\n\nEnables:\n - NextStep button on cycle\n - IO Controls\n - profilesShown is overriden to `true`.",
                    "type": "boolean"
                },
                "hideMultilayerIndications": {
                    "description": "Hides multilayer indications in cycle",
                    "type": "boolean"
                },
                "onlyShowSelectedProfileFields": {
                    "description": "Only show picked profile fields",
                    "type": "boolean"
                },
                "profilesShown": {
                    "description": "Do profiles list is shown",
                    "type": "boolean"
                },
                "variables": {
                    "description": "Additional variables.\nCan be retreived by a `ParameterBlock` in `ProgramBlockRunner`.",
                    "items": {
                        "additionalProperties": false,
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "value": {
                                "type": "number"
                            }
                        },
                        "required": [
                            "name",
                            "value"
                        ],
                        "type": "object"
                    },
                    "type": "array"
                }
            },
            "required": [
                "devMode",
                "hideMultilayerIndications",
                "onlyShowSelectedProfileFields",
                "profilesShown",
                "variables"
            ],
            "type": "object"
        }
    },
    "description": "Configuration info.json driving NusterTurbine",
    "properties": {
        "$schema": {
            "description": "JSON Schema for json validation",
            "type": "string"
        },
        "addons": {
            "description": "Machine Addons",
            "items": {
                "type": "string"
            },
            "type": "array"
        },
        "machineAddons": {
            "description": "Machine Specific addon, should be used as less as possible",
            "items": {
                "additionalProperties": false,
                "description": "Addon",
                "properties": {
                    "addonName": {
                        "description": "Addon name, should be the same as the Json file holding him",
                        "type": "string"
                    },
                    "content": {
                        "description": "Addon content Array",
                        "items": {
                            "anyOf": [
                                {
                                    "additionalProperties": false,
                                    "properties": {
                                        "content": {
                                            "items": {
                                                "$ref": "#/definitions/Profile"
                                            },
                                            "type": "array"
                                        },
                                        "mode": {
                                            "const": "merge",
                                            "type": "string"
                                        },
                                        "path": {
                                            "const": "profilePremades",
                                            "type": "string"
                                        }
                                    },
                                    "required": [
                                        "content",
                                        "mode",
                                        "path"
                                    ],
                                    "type": "object"
                                },
                                {
                                    "additionalProperties": false,
                                    "properties": {
                                        "content": {
                                            "items": {
                                                "additionalProperties": false,
                                                "properties": {
                                                    "cycle": {
                                                        "type": "string"
                                                    },
                                                    "name": {
                                                        "type": "string"
                                                    },
                                                    "profile": {
                                                        "type": "string"
                                                    }
                                                },
                                                "required": [
                                                    "cycle",
                                                    "name"
                                                ],
                                                "type": "object"
                                            },
                                            "type": "array"
                                        },
                                        "mode": {
                                            "const": "merge",
                                            "type": "string"
                                        },
                                        "path": {
                                            "const": "cyclePremades",
                                            "type": "string"
                                        }
                                    },
                                    "required": [
                                        "content",
                                        "mode",
                                        "path"
                                    ],
                                    "type": "object"
                                },
                                {
                                    "additionalProperties": false,
                                    "properties": {
                                        "content": {
                                            "items": {
                                                "$ref": "#/definitions/ProductSeries"
                                            },
                                            "type": "array"
                                        },
                                        "mode": {
                                            "const": "merge",
                                            "type": "string"
                                        },
                                        "path": {
                                            "description": "Container product series path",
                                            "pattern": "^containers\\.[0-9]+\\.supportedProductSeries$",
                                            "type": "string"
                                        }
                                    },
                                    "required": [
                                        "content",
                                        "mode",
                                        "path"
                                    ],
                                    "type": "object"
                                },
                                {
                                    "additionalProperties": false,
                                    "properties": {
                                        "content": {
                                            "type": "number"
                                        },
                                        "mode": {
                                            "const": "set",
                                            "type": "string"
                                        },
                                        "path": {
                                            "description": "Container regulation max target path",
                                            "pattern": "^containers\\.[0-9]+\\.regulation\\.[0-9]+\\.maxTarget$",
                                            "type": "string"
                                        }
                                    },
                                    "required": [
                                        "content",
                                        "mode",
                                        "path"
                                    ],
                                    "type": "object"
                                },
                                {
                                    "additionalProperties": false,
                                    "properties": {
                                        "content": {
                                            "type": "number"
                                        },
                                        "mode": {
                                            "const": "set",
                                            "type": "string"
                                        },
                                        "path": {
                                            "description": "Container regulation security max path",
                                            "pattern": "^containers\\.[0-9]+\\.regulation\\.[0-9]+\\.securityMax$",
                                            "type": "string"
                                        }
                                    },
                                    "required": [
                                        "content",
                                        "mode",
                                        "path"
                                    ],
                                    "type": "object"
                                },
                                {
                                    "additionalProperties": false,
                                    "properties": {
                                        "content": {
                                            "type": "number"
                                        },
                                        "mode": {
                                            "const": "set",
                                            "type": "string"
                                        },
                                        "path": {
                                            "description": "Maintenance sensor limit value path",
                                            "pattern": "^maintenance\\.[0-9]+\\.sensorLimitValue$",
                                            "type": "string"
                                        }
                                    },
                                    "required": [
                                        "content",
                                        "mode",
                                        "path"
                                    ],
                                    "type": "object"
                                },
                                {
                                    "additionalProperties": false,
                                    "properties": {
                                        "content": {
                                            "type": "number"
                                        },
                                        "mode": {
                                            "const": "set",
                                            "type": "string"
                                        },
                                        "path": {
                                            "description": "Maintenance sensor base value path",
                                            "pattern": "^maintenance\\.[0-9]+\\.sensorBaseValue$",
                                            "type": "string"
                                        }
                                    },
                                    "required": [
                                        "content",
                                        "mode",
                                        "path"
                                    ],
                                    "type": "object"
                                }
                            ]
                        },
                        "type": "array"
                    }
                },
                "required": [
                    "addonName",
                    "content"
                ],
                "type": "object"
            },
            "type": "array"
        },
        "model": {
            "$ref": "#/definitions/ConfigModel",
            "description": "Machine model"
        },
        "name": {
            "description": "Machine Name",
            "type": "string"
        },
        "revision": {
            "description": "Machine revision",
            "type": "number"
        },
        "serial": {
            "description": "Machine Serial number",
            "type": "string"
        },
        "settings": {
            "$ref": "#/definitions/Settings",
            "description": "Machine Settings"
        },
        "variant": {
            "const": "m",
            "description": "Machine variant",
            "type": "string"
        }
    },
    "required": [
        "$schema",
        "addons",
        "machineAddons",
        "model",
        "name",
        "revision",
        "serial",
        "settings",
        "variant"
    ],
    "type": "object"
}

