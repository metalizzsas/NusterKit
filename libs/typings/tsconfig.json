{
  "compilerOptions": {
    "lib": ["es2016"],
    "types": ["node"],
    "typeRoots": [],
    "module": "CommonJS",
    "target": "es2016",
    "strict": true,
    "importsNotUsedAsValues": "error",
    "esModuleInterop": true,
    "sourceMap": true,
    "sourceRoot": "src",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "build"
  }
}