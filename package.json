{
  "name": "nuster-turbine",
  "engines": {
    "node": "16.x"
  },
  "version": "1.0.0",
  "description": "Typescript project running on Docker and RPi4.",
  "main": "app.js",
  "scripts": {
    "dev": "export DISABLE_EX260=\"true\" && ./node_modules/.bin/concurrently --kill-others \"npm run dev:app\" \"npm run dev:modbus\"",
    "dev:app": "nodemon src/app.ts | node_modules/.bin/pino-pretty",
    "dev:modbus": "node dev/modbus.mjs",
    "machine": "export NODE_ENV=\"production\"; nodemon src/app.ts | node_modules/.bin/pino-pretty",
    "docs": "typedoc --out docs --entryPointStrategy expand ./src",
    "build": "tsc",
    "start": "node build/app.js | pino-pretty",
    "lc": "find './src' -name '*.ts' | xargs wc -l",
    "balena-env": "bash ./env.sh",
    "balena-publish": "bash nuster-desktop.sh && balena push NusterTurbine -c",
    "balena-publish-vm": "bash nuster-desktop.sh && balena push NTx64"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Kworz/NusterTurbine.git"
  },
  "keywords": [],
  "author": "Metalizz SAS",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/Kworz/NusterTurbine/issues"
  },
  "homepage": "https://github.com/Kworz/NusterTurbine#readme",
  "dependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/deep-extend": "^0.4.32",
    "@types/express": "^4.17.13",
    "@types/lodash": "^4.14.177",
    "@types/node": "^16.11.9",
    "@types/ping": "^0.4.1",
    "@types/qrcode": "^1.4.2",
    "@types/ws": "^8.2.0",
    "argon2": "^0.28.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "deep-extend": "^0.6.0",
    "express": "^4.17.1",
    "modbus-serial": "^8.0.5",
    "mongoose": "^6.0.13",
    "nuster-turbine-machines": "git+https://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:x-oauth-basic@github.com/metalizzsas/NusterTurbineMachines.git",
    "ping": "^0.4.1",
    "pino": "^7.6.0",
    "pino-http": "^6.5.0",
    "pino-pretty": "^7.3.0",
    "qrcode": "^1.5.0",
    "st-ethernet-ip": "^2.4.4",
    "ts-udp-discovery": "^1.0.0",
    "typescript": "^4.5.2",
    "udp-discovery": "^2.0.2",
    "ws": "^8.3.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "concurrently": "^7.0.0",
    "eslint": "^8.4.1",
    "nodemon": "^2.0.15",
    "ts-node": "^10.4.0"
  }
}
