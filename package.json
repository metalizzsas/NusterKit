{
  "name": "@metalizzsas/nuster-kit",
  "version": "1.0.0",
  "description": "Mono repository that holds the nuster project",
  "engines": {
    "node": "18.x"
  },
  "scripts": {
    "dev": "pnpm -r --parallel run dev",
    "lint": "pnpm -r --parallel run lint",
    "test": "pnpm -r --parallel run test",
    "build": "pnpm build:libs && pnpm build:packages && pnpm build:simulation",
    "build:libs": "pnpm -r --filter='./libs/*' run build",
    "build:packages": "pnpm -r --filter='./packages/*' run build",
    "build:simulation": "pnpm -r --filter='./simulation/*' run build",
    "release": "changeset publish",
    "version": "changeset version && pnpm install --lockfile-only"
  },
  "keywords": [],
  "author": "@metalizzsas",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "git@github.com:metalizzsas/NusterKit.git"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.2",
    "node-gyp": "^9.4.0"
  },
  "peerDependencies": {
    "@jest/globals": "^29.3.1",
    "jest": "^29.3.1",
    "ts-jest": "^29.0.3",
    "ts-node": "10.9.1"
  },
  "packageManager": "pnpm@8.1.0",
  "dependencies": {
    "@jest/globals": "^29.5.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.1",
    "ts-node": "10.9.1"
  }
}
