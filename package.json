{
  "name": "nuster-turbine",
  "engines": {
    "node": "18.x"
  },
  "version": "1.4.1",
  "description": "Typescript project running on BalenaOS and RPi4.",
  "private": true,
  "main": "app.js",
  "scripts": {
    "update": "rm -rf ./nuster-turbine-machines && git clone -b next git@github.com:metalizzsas/NusterTurbineMachines.git ./nuster-turbine-machines",
    "dev": "export DISABLE_EX260=\"true\" && export DISABLE_AUTH=\"true\" && export FORCE_DEV_CONFIG=\"true\" && ./node_modules/.bin/concurrently --kill-others \"npm run dev:app\" \"npm run dev:modbus\"",
    "dev:preview": "export DISABLE_EX260=\"true\" && export DISABLE_AUTH=\"true\" && export FORCE_DEV_CONFIG=\"true\" && ./node_modules/.bin/concurrently --kill-others \"node build/app.js\" \"npm run dev:modbus\"",
    "dev:app": "nodemon src/app.ts | node_modules/.bin/pino-pretty",
    "dev:modbus": "node dev/modbus.mjs",
    "machine": "export NODE_ENV=\"production\" && export DISABLE_AUTH='true' && nodemon src/app.ts | node_modules/.bin/pino-pretty",
    "build": "tsc",
    "start": "node build/app.js | pino-pretty",
    "lc": "find './src' -name '*.ts' | xargs wc -l",
    "schema": "npx typescript-json-schema@0.53.0 \"src/interfaces/IMachine.ts\" IMachine --ignoreErrors --required -o \"src/interfaces/schema.json\"",
    "docs": "npx typedoc --entryPointStrategy expand ./src --out docs",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/metalizzsas/NusterTurbine.git"
  },
  "keywords": [],
  "author": "Metalizz SAS",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/metalizzsas/NusterTurbine/issues"
  },
  "homepage": "https://github.com/metalizzsas/NusterTurbine#readme",
  "dependencies": {
    "argon2": "^0.28.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "deep-extend": "^0.6.0",
    "express": "^4.17.1",
    "jest": "^28.1.3",
    "lockfile": "^1.0.4",
    "modbus-serial": "^8.0.5",
    "mongoose": "^6.2.1",
    "ping": "^0.4.1",
    "pino": "^7.6.0",
    "pino-http": "^7.0.0",
    "pino-pretty": "^7.3.0",
    "qrcode": "^1.5.0",
    "ts-enip": "github:metalizzsas/ts-enip#build",
    "ts-udp-discovery": "^1.0.0",
    "typescript": "^4.5.2",
    "udp-discovery": "^2.0.2",
    "ws": "^8.3.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/deep-extend": "^0.4.32",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.7",
    "@types/lockfile": "^1.0.2",
    "@types/node": "^17.0.31",
    "@types/ping": "^0.4.1",
    "@types/qrcode": "^1.4.2",
    "@types/ws": "^8.2.0",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "concurrently": "^7.0.0",
    "eslint": "^8.4.1",
    "nodemon": "^2.0.15",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.4.0"
  }
}
