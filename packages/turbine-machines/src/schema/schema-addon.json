{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "IAddonContent": {
            "properties": {
                "content": {
                    "description": "Content replaced or inserted to this category"
                },
                "mode": {
                    "description": "Insertion mode",
                    "enum": [
                        "merge",
                        "replace"
                    ],
                    "type": "string"
                },
                "path": {
                    "description": "Path were the content is added",
                    "type": "string"
                }
            },
            "required": [
                "content",
                "mode",
                "path"
            ],
            "type": "object"
        }
    },
    "properties": {
        "addonName": {
            "description": "Addon name, should be the same as the Json file holding him",
            "type": "string"
        },
        "content": {
            "description": "Addon content Array",
            "items": {
                "$ref": "#/definitions/IAddonContent"
            },
            "type": "array"
        }
    },
    "required": [
        "addonName",
        "content"
    ],
    "type": "object"
}

