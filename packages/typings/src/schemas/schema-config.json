{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "additionalProperties": false,
    "definitions": {
        "ConfigModel": {
            "enum": [
                "metalfog",
                "smoothit",
                "uscleaner"
            ],
            "type": "string"
        },
        "IAddon": {
            "additionalProperties": false,
            "properties": {
                "addonName": {
                    "description": "Addon name, should be the same as the Json file holding him",
                    "type": "string"
                },
                "content": {
                    "description": "Addon content Array",
                    "items": {
                        "additionalProperties": false,
                        "properties": {
                            "content": {
                                "description": "Content replaced or inserted to this category"
                            },
                            "mode": {
                                "description": "Insertion mode",
                                "enum": [
                                    "merge",
                                    "replace"
                                ],
                                "type": "string"
                            },
                            "path": {
                                "description": "Path were the content is added",
                                "type": "string"
                            }
                        },
                        "required": [
                            "content",
                            "mode",
                            "path"
                        ],
                        "type": "object"
                    },
                    "type": "array"
                }
            },
            "required": [
                "addonName",
                "content"
            ],
            "type": "object"
        },
        "IMachineSettings": {
            "additionalProperties": false,
            "description": "Machine additional settings",
            "properties": {
                "ioControlsMasked": {
                    "description": "Disable IO controls access",
                    "enum": [
                        false
                    ],
                    "type": "boolean"
                },
                "isPrototype": {
                    "description": "Enable prototype mode",
                    "enum": [
                        true
                    ],
                    "type": "boolean"
                },
                "maskedManuals": {
                    "description": "Masked manual modes",
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                },
                "maskedPremades": {
                    "description": "Masked premade cycles",
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                },
                "maskedProfiles": {
                    "description": "Masked premade profiles",
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                },
                "profilesMasked": {
                    "description": "Do profile button is masked",
                    "enum": [
                        true
                    ],
                    "type": "boolean"
                }
            },
            "type": "object"
        }
    },
    "description": "Configuration info.json driving NusterTurbine",
    "properties": {
        "addons": {
            "description": "Machine Addons",
            "items": {
                "type": "string"
            },
            "type": "array"
        },
        "machineAddons": {
            "description": "Machine Specific addon, should be used as less as possible",
            "items": {
                "$ref": "#/definitions/IAddon"
            },
            "type": "array"
        },
        "model": {
            "$ref": "#/definitions/ConfigModel",
            "description": "Machine model"
        },
        "name": {
            "description": "Machine Name",
            "type": "string"
        },
        "revision": {
            "description": "Machine revision",
            "type": "number"
        },
        "serial": {
            "description": "Machine Serial number",
            "type": "string"
        },
        "settings": {
            "$ref": "#/definitions/IMachineSettings",
            "description": "Machine Settings"
        },
        "variant": {
            "description": "Machine variant",
            "enum": [
                "m"
            ],
            "type": "string"
        }
    },
    "required": [
        "model",
        "name",
        "revision",
        "serial",
        "variant"
    ],
    "type": "object"
}

