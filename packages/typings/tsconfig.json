{
  "compilerOptions": {
    "lib": [
      "es2021"
    ],
    "typeRoots": [],
    "module": "commonjs",
    "target": "es2021",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "build"
  }
}